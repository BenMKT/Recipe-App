<div class='cont'> 
    <h2>Add a new ingredient</h2> 
    <%= form_with(model: [@recipe, @recipe_food], url: recipe_recipe_foods_path(recipe_id: @recipe.id), local: true) do |f| %>
       
        <div class='field'> 
             <%= f.label :food_id, 'Select food item' %>
             <%= f.collection_select(:food_id, @available_foods, :id, :name, {}, {}) %>
        </div>
        <div class='field'> 
            <%= f.label :quantity %>
            <%= f.text_field :quantity %>
        </div>

        <%= f.hidden_field :recipe_id, value: @recipe.id %>
        
        <div>
          <%= f.submit "Add ingredient" %>
        </div>
    <% end %>
</div>
